# Backend Environment Variables
# Copy this to .env and fill in your actual values

# Database
# For local development (SQLite):
DATABASE_URL=sqlite:///./danddy.db
# For production (PostgreSQL - automatically set by Render):
# DATABASE_URL=postgresql://user:password@host:5432/danddy

# Security
SECRET_KEY=your-secret-key-here-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API (keep this secret!)
OPENAI_API_KEY=sk-your-openai-key-here

# Optional: Rate limiting
MAX_REQUESTS_PER_USER_PER_MINUTE=10
MAX_REQUESTS_PER_USER_PER_DAY=100

# CORS (adjust for your frontend URL)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

